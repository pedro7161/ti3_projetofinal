@using barffood.Models;
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Secção do Cliente</h1>
<p>
    Esta secção irá gerir os clientes da empresa.

</p>

<h1>Foi desenvolvida no contexto:</h1>
<h3>Escola:@ViewBag.escola</h3>
<h4>Disciplina:@ViewData["disciplina"]</h4>
<h4>Professor:@TempData["professor"]</h4>

<table class="table table-bordered table-responsive table-striped bg-success">
    <thead>
        <tr>
            <td colspan="2" style="background-color:orange;text-align:center ;font-size:2.3em">Lista de alunos</td>
        </tr>
        <tr>
            <td style="width:33px;">Num</td>
            <td>Nome</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Food a in Model)
        {
            <tr>
                <td>@a.Num</td>
                <td>@a.Nome</td>
            </tr>
        }
    </tbody>
</table>

